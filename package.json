{
  "name": "ojotas",
  "version": "0.0.6",
  "description": "The database-first ORM",
  "scripts": {
    "lint": "eslint ./src",
    "with-ts": "node -r ts-node/register",
    "build": "tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "test-unit": "npm run with-ts -- --env-file=.env --test $(find ./src -name '*.test.ts' -and -not -name 'orm.test.ts')",
    "test-mysql": "DIALECT=mysql npm run with-ts -- --env-file=.env --test ./src/orm.test.ts",
    "test-postgres": "DIALECT=postgres npm run with-ts -- --env-file=.env --test ./src/orm.test.ts",
    "test": "npm run test-unit && npm run test-mysql && npm run test-postgres"
  },
  "main": "./lib/cjs/orm.js",
  "module": "./lib/esm/orm.js",
  "types": "./lib/esm/orm.d.ts",
  "files": [
    "bin/*",
    "lib/**/*",
    "templates/*"
  ],
  "bin": {
    "ojotas-codegen": "bin/codegen.js"
  },
  "author": "agiletiger",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "fast-glob": "^3.3.1",
    "named-placeholders": "^1.1.3",
    "node-sql-parser": "^4.11.0"
  },
  "peerDependencies": {
    "mysql2": "^3.6.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.8.8",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.49.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "fast-check": "^3.13.2",
    "prettier": "3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
